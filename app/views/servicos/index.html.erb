<head>
  <style>
      *{
          margin: 0;
          padding: 0;
          font-family: 'Open Sans', sans-serif;
      }

      ul{
          list-style: none;
          margin: 0;
          padding: 0;
      }
      ul li a{
          text-decoration: none;
      }

      .flex-container{
          display: flex;
          max-width: 992px;
          margin: auto;
          width: 100%;
          min-width: 320px;
      }

      header{
          background-color: darkblue;
          height: 100px;
          display: flex;
          align-items: center;
          color: white;
          margin-bottom: 8px;
      }
      header .list-items{
          display: flex;
          width: 100%;
          max-width: 260px;
          justify-content: space-between;
          align-items: center;
          margin-bottom: 10px;
      }
      .list-items li a{
          color: white;
      }

      header .menu{
          justify-content: space-between;
      }
      .apresentação{
          align-items: center;
          justify-content: space-between;
      }
      .apresentação .texto-apresentação{
          min-height: 200px;
          color: darkblue;
          font-size:18px ;
          margin-top: 30px;

      }
      .btn{
          background-color: darkblue;
          color: white;
          text-align: center;
          border-radius: 30px;
          width: 220px;
          display: block;
          text-decoration: none;
          height: 50px;
          line-height: 50px;
          margin-top: 10px;
          margin-bottom: 10px;
          text-decoration: none;
      }
      /*mobile*/
      @media(max-width: 992px){
          .flex-container{
              flex-direction: column;
          }
          .apresentação{
              flex-direction: column-reverse;
          }

      }
  </style>
<body>
<header>
  <div class="flex-container menu">
    <div><h1>Servicos</h1></div>
  </div>
</header>

<div class="flex-container apresentação">
  <div class="texto-apresentação">
    <ul class="list-items">
      <div id="servicos">
        <li class="btn"><%= link_to "Voltar a Pagina Inicial", root_path %></li>
        <li class="btn"><%= link_to "Criar Servico", new_servico_path %></li>
        <% @servicos.each do |servico| %>
          <%= render servico %>
          <li class="btn"><%= link_to "Mostrar esse Servico", servico %></li>
        <% end %>
      </div>
    </ul>
  </div>
</div>
</body>


